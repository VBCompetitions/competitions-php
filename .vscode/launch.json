  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "externalConsole": false,
      "port": 9003,
      "runtimeArgs": [
        "-dxdebug.start_with_request=yes"
      ]
    },
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "port": 9003
    }
  ]
}
